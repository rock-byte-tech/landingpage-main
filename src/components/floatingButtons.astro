---
import { Image } from 'astro:assets';
import iconInstagram from '../assets/icons/instagram.webp';
import iconWhatsapp from '../assets/icons/whatsapp.webp';
---

<div class="fixed bottom-6 right-6 z-50 flex flex-col items-center gap-4">
    <a href="https://calendly.com/devops-rbt" target="_blank" rel="noopener noreferrer" aria-label="Agenda una reunion en Calendly"
        class="bg-[#363636] rounded-full p-3 shadow-lg hover:drop-shadow-[0_0_12px_#00FFC6] transition duration-300 flex items-center justify-center hover:animate-bounce">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-[#00FFC6]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
